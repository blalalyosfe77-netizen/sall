<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ store.name }}{% endblock %}</title>
    
    <!-- Meta Tags -->
    <meta name="description" content="{% block description %}{{ store.description }}{% endblock %}">
    <meta name="keywords" content="{% block keywords %}{{ store.keywords }}{% endblock %}">
    
    <!-- Favicon -->
    <link rel="icon" href="{{ store.favicon }}" type="image/x-icon">
    
    <!-- CSS Files -->
    <link rel="stylesheet" href="{{ 'assets/styles/theme.css' | asset }}">
    
    <!-- Additional CSS -->
    {% block styles %}{% endblock %}
    
    <!-- Salla Core CSS -->
    {{ salla.css }}
</head>
<body class="{% block body_class %}{% endblock %}">
    
    <!-- Header -->
    {% include 'partials.header' %}
    
    <!-- Main Content -->
    <main class="main-content">
        {% block content %}{% endblock %}
    </main>
    
    <!-- Footer -->
    {% include 'partials.footer' %}
    
    <!-- Salla Core JS -->
    {{ salla.js }}
    
    <!-- Custom JS -->
    {% block scripts %}{% endblock %}
    
    <!-- Theme JS -->
    <script src="{{ 'assets/js/theme.js' | asset }}"></script>
    
</body>
</html>